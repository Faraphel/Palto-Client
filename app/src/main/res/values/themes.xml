<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Palto" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorSecondary</item>

        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textSize">22dp</item>

        <item name="floatingActionButtonStyle">@style/actionButton</item>
    </style>

    <style name="actionButton">
        <item name="maxImageSize">60dp</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="title">
        <item name="android:textSize">75dp</item>
    </style>

    <style name="Theme.Palto" parent="Base.Theme.Palto" />
</resources>